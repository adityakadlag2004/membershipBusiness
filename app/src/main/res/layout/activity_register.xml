<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.android.membershipbusiness.viewModels.AuthViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".activities.auth.RegisterActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_into_your_account"
            android:layout_marginTop="200dp"
            android:textAlignment="center"
            android:textColor="@color/faintGray"
            android:gravity="center_horizontal"
            android:fontFamily="@font/monmedium"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_Reg"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/email"
                android:elevation="8dp"
                tools:targetApi="lollipop"
                android:drawablePadding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editback"
                android:drawableStart="@drawable/custom_email_icon"
                android:padding="10dp"
                android:fontFamily="@font/monmedium"
                android:text="@={viewmodel.email}"

                android:drawableLeft="@drawable/ic_email" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit_Reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.password}"
                android:layout_marginStart="20dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:elevation="8dp"
                tools:targetApi="lollipop"
                android:background="@drawable/editback"
                android:drawableStart="@drawable/custom_pass_icon"
                android:padding="10dp"
                android:hint="@string/password"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_password" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()-> viewmodel.register()}"
            android:layout_marginStart="65dp"
            android:background="@drawable/btn_circular"
            android:textAllCaps="false"
            android:fontFamily="@font/monmedium"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="65dp"
            android:text="@string/sign_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/txt_Reg"
            android:layout_gravity="center"
            android:text="@string/already_have_an_account_sign_in"
            android:textSize="12sp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:id="@+id/btn_google_register"
            android:layout_marginEnd="90dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="40dp"
            tools:targetApi="lollipop">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/googlelogo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:id="@+id/demoImage"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:text="@string/google"
                    android:textSize="15sp"
                    android:textColor="#7f7f7f"
                    android:fontFamily="@font/monmedium"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
